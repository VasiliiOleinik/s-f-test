{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react",
    "lib": ["dom", "esnext"]
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
